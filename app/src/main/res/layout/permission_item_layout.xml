<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="4dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/runtime_permission_layout"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/permissionNameTV"
        android:paddingStart="4dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/permission_tv_size"
        android:text="Location"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingStart="4dp"
        android:id="@+id/permissionActiveTV"
        android:textSize="@dimen/permission_tv_size"
        android:text="Inactive"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <Button
        android:text="REQUEST"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:id="@+id/permissionRequestButton"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


</LinearLayout>